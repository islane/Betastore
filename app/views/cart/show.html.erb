<div class="col-md-3"></div>
<div class="col-md-6">

	<h2>Cart</h2>
	
	<table class="table">
	  <tr>
	    <th>Name</th>
	    <th>Price</th>
	    <th>Quantity</th>
	    <th></th>
	  </tr>
	  	<% for cart_product in current_cart.cart_products %>

	    <tr>
	      <td><%= cart_product.product.name %></td>
	      <td><%= cart_product.product.price %></td>
	      <td><%= cart_product.quantity %></td>
	      <td><%= button_to "X", remove_from_cart_product_path(cart_product), method: :delete, class: 'btn btn-danger', data: {confirm: "Remove #{cart_product.product.name} from your cart?"} %></td>
	    </tr>
	  <% end %>
	  </table>
	 <div><b>Total: </b><%= number_to_currency current_cart.subtotal %></div>

<%= link_to "Checkout", new_order_path, class: 'btn btn-success' %>

</div>
<br>

<div class="col-md-3"></div>


