<h1>Order Placed</h1>
<h3>Your order is #<%= @order.id %></h3>

<h5>Thanks for shopping.</h5>

<table>
  <% @order.line_items.each do |line_item| %>
    <tr>
      <td><%= line_item.name %></td>
      <td><%= line_item.quantity %></td>
      <td><%= line_item.price %></td>
    </tr>
  <% end %>
</table>