<div class="col-md-3"></div>
<div class="col-md-6">

  <ol class="breadcrumb">
    <li><a href="<%= products_path %>">Products</a></li>
    <li class="active"><%= @product_info.name %></li>
  </ol>

<h2><%= @product_info.name %></h2>


  <div style="height: 300px; position: relative; overflow: hidden;">
    <img src="<%=@product_info.image_url %>" style="width: 100%; margin: auto; position: absolute; top: -9999px; bottom: -9999px; left: -9999px; right: -9999px; -webkit-border-radius: 7px; -moz-border-radius: 7px; border-radius: 7px;">
  </div>

  <div>
    <p><b>Price:</b> <%= number_to_currency @product_info.price %></p>
    <p><b>Created:</b> <%= time_ago_in_words @product_info.created_at %> ago (<%= @product_info.created_at.strftime('%m/%d/%Y') %>)</p>
  </div>

    <div data-vote-url="<%= product_path(@product_info) %>">
      <b>Rating: </b><span class="votes"><%= @product_info.votes %></span>
      <span class="vote-up"><button>+1</button></span>
      <span class="vote-down"><button>-1</button></span>
    </div>
    
   <br>

  <%= button_to "Add to cart", add_to_cart_product_path(@product_info), method: :post, class: 'btn btn-default' %>

</div>
<div class="col-md-3"></div>

<br>
