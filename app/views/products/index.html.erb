<div class="js-isotope isobody" data-isotope-options='{ "itemSelector": ".item", "masonry": { "columnWidth": 150, "gutter": 10 } }'>

<% for product in @products %>
  <div class="item img-overlay" style="margin-bottom: 10px;">
    	<div class="project-overlay prod-img">
    		<div class="" style="background-color: rgba(240,240,240,0.9); margin: 5px; padding: 5px;">
        	<%= link_to product.name, product_path(product) %><br>
        	<%= number_to_currency product.price %>
        </div>
        
        <div>
	        <%= button_to "Add to cart", add_to_cart_product_path(product), method: :post, class: 'btn btn-primary' %>
        </div>
     	</div>
    	<a class="media" href="<%= product_path(product) %>">
      	<img src="<%= product.image_url %>" class="img-responsive" alt="<%= product.name %>">
      </a>

  </div>

<% end %>

</div>





</div>
<div class="col-md-2 col-sm-2"></div>

<script>
	// initialize Isotope
	var $container = $('.isobody').isotope({
	  // options
	});
	// layout Isotope again after all images have loaded
	$container.imagesLoaded( function() {
	  $container.isotope('layout');
	});
</script>