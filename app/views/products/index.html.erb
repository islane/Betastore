<div class="col-md-6">
  
<h2>Products</h2>

<table class="table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th></th>
  </tr>
  <% for product in @products %>
    <tr>
      <td><%= product.id %></td>
      <td><%= link_to product.name, product_path(product) %></td>
      <td><%= product.price %></td>
      <td><%= button_to "Add to cart", add_to_cart_product_path(product), method: :post, class: 'btn btn-default' %></td>
    </tr>
  <% end %>
</table>

<br>

