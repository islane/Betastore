<div class="col-md-6">

<h2>Products</h2>

<table class="table">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Created At</th>
  </tr>
  <% for product in @products %>
    <tr>
      <td><%= product.id %></td>
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= product.price %></td>
      <td><%= product.created_at %></td>
    </tr>
  <% end %>
</table>

<br>

<a href="<%= new_admin_product_path() %>" class="btn btn-primary"><b>Add New Product</b></a>

</div>
<div class="col-md-3"></div>
