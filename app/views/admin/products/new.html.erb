<h1>New Product</h1>

<% unless @product.errors.full_messages.empty? %>
  <% for error in @product.errors.full_messages %>
    <div class='notice'><em><%= p error %></em></div>
  <% end %>
 <br>
<% end %>

<div style="width: 200px; height: auto; margin: 0 auto;">
<%= form_for [:admin, @product] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  <br>
  <%= f.submit %>
<% end %>
</div>
