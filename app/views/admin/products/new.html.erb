<div class="col-md-3"></div>
<div class="col-md-6">

<h2>New Product</h2>

<%= form_for [:admin, @product], {html:{role: 'form'}} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price, class: 'form-control' %>
  <br>
  <%= f.label :image_url %>
  <%= f.text_field :image_url, class: 'form-control' %>
  <br>
  <%= f.submit(nil, class: 'btn btn-default')%>
<% end %>
</div>
<div class="col-md-3"></div>

<% unless @product.errors.full_messages.empty? %>
  <% for error in @product.errors.full_messages %>
    <div class='notice'><em><%= p error %></em></div>
  <% end %>
 <br>
<% end %>
